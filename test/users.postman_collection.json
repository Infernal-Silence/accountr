			"event": [
				{
					"listen": "test",
					"script": {
						"id": "e779704f-b3fd-4129-8abd-2a24e3585318",
						"exec": [
							"pm.test(\"Successful POST request\", function () {\r",
							"    var jsonData = pm.response.json();\r",
							"    var userId = pm.globals.get(\"userId\");\r",
							"    pm.expect(pm.response.code).to.eql(200);\r",
							"    pm.expect(jsonData).to.include({\r",
							"        id: userId,\r",
							"        email: \"user1@gmail.com\",\r",
							"        first_name: \"user1\",\r",
							"        last_name: \"user1\"\r",
							"    });\r",
